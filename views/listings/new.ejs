<% layout("layouts/boilerplate") -%>
    <form action="/listings" method="post" novalidate id="Form" enctype="multipart/form-data">
        <div class="flex flex-col items-center">
            <h3 class="text-4xl font-semibold text-gray-800 my-2">Add a New Listing </h3>
            <div>
                <label for="title ">Title</label><br>
                <input type="text" name="listing[title]" placeholder="Cozy 2BHK Apartment in Delhi" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">Title cannot be empty.</p>
            </div>
            <div>
                <label for="description">Description</label><br>
                <textarea type="text" name = "listing[description]" placeholder="Describe the property, amenities, nearby places, etc." class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" row=3 required></textarea>
                <p class="hidden text-red-500 text-sm">Description is required to provide details about the property.</p>
            </div>

            <div class="flex flex-col items-start gap-2">
                <label for="image" class="font-medium text-gray-700">Upload Listing Image</label>
                <input type="file" id="image" name="listing[image]" class="hidden" required>
                
                <label for="image" class="flex items-center justify-center w-full max-w-2xl lg:w-2xl h-36 border-2 border-dashed border-gray-300 rounded-lg bg-gray-50 cursor-pointer hover:border-gray-500 hover:bg-gray-100 transition-all">
                    <span class="text-gray-500">Click to upload an image</span>
                </label>
            </div>
            
            <div>
                <label for="price">Price</label><br>
                <input type="number" name = "listing[price]" placeholder="Enter price in â‚¹ (e.g., 1500)"class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required min="1">
                <p class="hidden text-red-500 text-sm">Price must be a valid amount and cannot be empty.</p>
            </div>
            <div>
                <label for="location">Location</label><br>
                <input type="text" name="listing[location]" placeholder='Enter city or locality (e.g., Connaught Place, Delhi)' class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">Location is required to list the property.</p>
                
            </div>
            <div>
                <label for="country">Country</label><br>
                <input type="text" name="listing[country]" placeholder='Enter country (e.g., India)'class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">Country is required for accurate property listing.</p>

            </div>
            
            <button class="mt-6 bg-blue-400 hover:bg-blue-500 text-white font-semibold px-6 py-2 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg">
                ADD
            </button>
        </div>
    </form>
