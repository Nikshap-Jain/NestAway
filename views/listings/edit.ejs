<% layout("layouts/boilerplate") -%>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" id="listingForm" novalidate>
        <div class="flex flex-col items-center">
            <h3 class="text-4xl font-semibold text-gray-800 mt-6">Edit This Listing</h3>
            <div>
                <label for="title ">Title</label><br>
                <input type="text" name="listing[title]" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" value="<%= listing.title %>" required>
                <p class="hidden text-sm text-red-500">Title cannot be empty.</p>
            </div>
            <div>
                <label for="description">Description</label><br>
                <textarea type="text" name = "listing[description]" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required><%=listing.description %></textarea>
                <p class="hidden text-red-500 text-sm">Description is required to provide details about the property.</p>
            </div>
            <div>
                <label for="image">Image Link</label><br>
                <input type="text" name="listing[image]" value="<%= listing.image.url %>" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">link must be valid and cannot be empty.</p>
            </div>
            <div>
                <label for="price">Price</label><br>
                <input type="number" name = "listing[price]" value="<%= listing.price %>"class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">Price must be a valid amount and cannot be empty.</p>
            </div>
            <div>
                <label for="location">Location</label><br>
                <input type="text" name="listing[location]" value="<%= listing.location %>" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">Location is required to list the property.</p>
            </div>
            <div>
                <label for="country">Country</label><br>
                <input type="text" name="listing[country]" value="<%= listing.country %>"class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
                <p class="hidden text-red-500 text-sm">Country is required for accurate property listing.</p>
            </div>

            <button class="mt-6 bg-blue-400 hover:bg-blue-500 text-white font-semibold px-6 py-2 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg">
                EDIT
            </button>
        </div>
    </form>
