<% layout("layouts/boilerplate") -%>

<form action="/signup" method="POST" novalidate  id="Form">
    <div class="flex items-center flex-col">
        <h3 class="text-4xl font-semibold text-gray-800 my-2">SignUp</h3>
        <div>
            <label for="username ">Username</label><br>
            <input type="text" name="username" placeholder="username" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
            <p class="hidden text-red-500 text-sm">Username cannot be empty.</p>
        </div>
        <div>
            <label for="email ">Email</label><br>
            <input type="text" name="email" placeholder="email" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
            <p class="hidden text-red-500 text-sm">Email cannot be empty.</p>
        </div>
        <div>
            <label for="password ">Password</label><br>
            <input type="password" name="password" placeholder="password" class="max-w-2xl lg:w-2xl border border-neutral-300 rounded-lg shadow-sm p-1 pl-3 hover:shadow-lg" required>
            <p class="hidden text-red-500 text-sm">Password cannot be empty.</p>
        </div>
        <button class="mt-6 bg-blue-400 hover:bg-blue-500 text-white font-semibold px-6 py-2 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg">
            Signup
        </button>
    </div>
</form>