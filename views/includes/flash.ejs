<% if (success && success.length){ %>
    <div class="bg-green-100 border border-green-400 text-green-900 px-4 py-1 rounded flex justify-between items-center transition-opacity duration-500 w-1/2 mx-auto mb-3" role="alert" id="alert">
        <p><%=success%></p>
        <button class="text-green-900 font-bold px-2 text-2xl" id="closeAlert">&times;</button>
    </div>
<% } %>

<% if (error && error.length){ %>
    <div class="bg-red-200 border border-red-400 text-red-900 px-4 py-1 rounded flex justify-between items-center transition-opacity duration-500 w-1/2 mx-auto mb-3" role="alert" id="alert">
        <p><%=error%></p>
        <button class="text-red-900 font-bold px-2 text-2xl" id="closeAlert">&times;</button>
    </div>
<% } %>


<script>
    document.getElementById("closeAlert").addEventListener("click", function () {
      let alertBox = document.getElementById("alert");
      alertBox.classList.add("opacity-0"); // Fade out
      setTimeout(() => alertBox.remove(), 300); // Remove from DOM
    });
  </script>